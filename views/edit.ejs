<%- include("partials/header"); -%>
<h1>Edit</h1>

<form action="/edit/<%= postId %>?_method=PUT" method="post">
    <div class="form-group">
        <label>Title</label>
        <input type="text" class="form-control" name="postTitle" value="<%=postTitle%>">
        <label>Post</label>
        <textarea name="postBody" class="form-control" cols="50" rows="5"><%=postContent%></textarea>     
    </div>
    <button type="submit" class="btn btn-primary">Publish</button>
    
</form>

<%- include("partials/footer"); -%>